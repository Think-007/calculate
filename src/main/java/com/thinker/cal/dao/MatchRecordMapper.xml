	<insert id="insertMatchRecord" parameterType="java.util.List">

		insert into mg_match_record(
		id,
		match_name,
		user_id,
		court_id,
		player_name,
		swing_time,
		score,
		create_time
		)

		<foreach collection="list" item="matchRecord" index="index"
			separator=",">
			(

			#{matchRecord.id},
			#{matchRecord.matchName},
			#{matcheRecord.userId},
			#{matchRecord.courtId},
			#{matchRecord.playerName},
			#{matchRecord.swingTimes},
			#{score},
			#{createTime}
			)
		</foreach>

	</insert>

	<select id="queryMatchRecordByUserId" >
		select

		t1.id as id,
		match_name as matchName,
		
		from mg_court t1 join mg_match_record t2 on t1.id = t2.id
		
		where t1.user_id = #{userId} order by t1.create_time desc;
		

		from mg_user

		where userid =
		#{userid};
	</select>
	
	<select id="queryMatchRecordByRecordId" resultType="MatchRecord">
	
		select 
			id as id,
			match_name as matchName,
			player_name as playerName
		from mg_match_record
		
		where id = #{recordId}
			
		
	</select>
	
	<insert id="insertUserRecord" parameterType="UserRecord">
	
		insert into mg_user_record(
		recordid,
		userid,
		recordinfo,
		createtime
		)
		values (
		#{recordId},
		#{userId},
		#{recordInfo},
		#{createTime}
		)
	
	</insert>


