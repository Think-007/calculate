	<insert id="insertCourt" parameterType="Court">
	
		insert into mg_court(
			id,
			name
		)
		values(
			#{courtId},
			#{name}
		)
	
	</insert>


	<select id="queryAllCourt" resultType="Court">
		select 
			id as courtId,
			name as name,
			address as address,
			country as country,
			city as city,
			type as type,
			area as area,
			owner as owner,
			tel_number as telNumber,
			email as email
		from  mg_court order by city desc
		
	</select>


